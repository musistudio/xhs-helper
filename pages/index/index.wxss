.form{
  display: flex;
  justify-content: space-between;
}
.form input{
  height: 40px;
  flex-grow: 1;
  padding-left: 4px;
}
.form button{
  width: 120px;
}
.scroll-view_H{
  white-space: nowrap;
  height: 100%;
}
image{
  width: 100%;
}
.shareUserInfo{
  width: 100%;
  height: 60px;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  background: #fff;
  padding-left: 10px;
  font-size: 14px;
  line-height: 60px;
}
.shareUserInfo image{
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 10px;
  margin-top: 5px;
}
.shareUserInfo .info {
  display: flex;
  flex-direction: column;
}
.nick{
  height: 30px;
  line-height: 40px;
}
.desc{
  height: 30px;
  font-size: 10px;
  color: #3f3f3f;
  line-height: 20px;
}